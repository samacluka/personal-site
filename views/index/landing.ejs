<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">

    <!-- CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/landing.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200;300;400;500;600;700&family=Pushster&display=swap" rel="stylesheet"> 

    <!-- TITLE -->
    <title><%= process.env.COMPANY_NAME %></title>
  </head>
  <body>
    <section id="landing">
      <div class="content-wrapper">
        <div class="overlay" style="opacity: 0; display: none;"></div>

        <div id="landing-header">
          <h1 class="title"><%= process.env.COMPANY_NAME %></h1>
        </div>
  
        <div class="landing-image one"></div>
        <div class="landing-image two"></div>
        <div class="landing-image three"></div>
        <div class="landing-image four"></div>
        <div class="landing-image five"></div>
      </div>
    </section>

    <section id="about">
      <div class="content-wrapper">
        <div class="overlay" style="opacity: 0; display: none;"></div>

        <div class="row w-100 h-75">
          <div class="column about-column h-100">
            <h1 class="title">About</h1>
            <div class="content about-content">
              <h4>
                Helping your business work for you
              </h4>
            </div>
          </div>

          <hr class="tapered vertical">

          <div class="column services-column h-100">
            <h1 class="title">Services</h1>
            <div class="content services-content">

              <table>
                <tbody>
                  <% Object.keys(services).forEach(key => { %>
                    <tr>
                      <td class="text-center" colspan="3"><%= key %></td>
                    </tr>
                    <% services[key].forEach(service => { %>
                      <tr>
                        <td><%= service.title %></td>
                        <td>&nbsp;</td>
                        <td><%= service.price %></td>
                      </tr>
                    <% }) %>
                  <% }) %>
                </tbody>
              </table>

            </div>
          </div>
        </div>        
      </div>
    </section>
      
    <section id="team">
      <div class="content-wrapper">
        <div class="overlay" style="opacity: 0; display: none;"></div>

        <div class="title">
          <h1 class="mb-0">
            Team
          </h1>
        </div>

        <div class="carousel-wrapper">
          <% sizes.forEach((size, sIndex) => { %>
            <div class="<%= size.bs %> h-100 align-items-center">
              <div class="team_carousel carousel slide w-100" data-interval="false">
                <div class="carousel-inner h-100">
                  <% team[size.chunk].forEach((members, tIndex) => { %>
                    <div class="carousel-item h-100 <%- tIndex == 0 ? 'active' : '' %>">
                      <div class="row h-100">
                        <% members.forEach((member, mIndex) => { %>
                        <div class="column col-<%- Math.floor(10 / size.chunk) %>">

                          <div class="card" data-description="<%= member.description %>">
                            <div class="card-header">
                              <div class="row">
                                <div class="col-4">
                                  <img src="<%= member.image %>" alt="<%= member.name %>">  
                                </div>
                                <div class="col-7 offset-1">
                                  <h3>
                                    <%= member.name %><span class="credentials text-muted"><%- typeof member.credentials !== 'undefined' ? `, ${member.credentials}` : '' %></span>
                                  </h3>
                                  <% if(typeof member.position !== 'undefined'){ %>
                                    <h6 class="position text-muted"><%= member.position %></h6>
                                  <% } %>

                                  <% if(typeof member.socials !== 'undefined'){ %>
                                    <div class="socials">
                                      <% member.socials.forEach((social, cIndex) => { %>
                                        <a class="mr-2" href="<%- social.link %>">
                                          <i class="<%- social.icon %>"></i>
                                        </a>
                                      <% }) %>
                                    </div>
                                  <% } %>
                                </div>
                              </div>
                            </div>
                          </div>
                    
                          <!-- <div class="flip-card-container">
                            <div class="flip-card">
                              <div class="flip-card-front">
                                <img src="<%= member.image %>" alt="<%= member.name %>">
                                <span>- <%= member.name %> -</span>
                              </div>
                              <div class="flip-card-back">
                                <p class="mb-0"><%= member.description %></p>

                                <% if(typeof member.socials !== 'undefined'){ %>
                                  <div class="socials">
                                    <% member.socials.forEach((social, cIndex) => { %>
                                      <a href="<%- social.link %>">
                                        <i class="<%- social.icon %>"></i>
                                      </a>
                                    <% }) %>
                                  </div>
                                <% } %>
                                
                                <span>- <%= member.name %> -</span>
                              </div>
                            </div>
                          </div> -->
          
                        </div>
                        <% }) %>
                      </div>
                    </div>
                  <% }) %>
                </div>
                <a class="carousel-control carousel-control-prev" href=".team_carousel" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control carousel-control-next" href=".team_carousel" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
            </div>
          <% }) %>
        </div>
        
      </div>
    </section>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    <script src="https://cdn.usebootstrap.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="/js/anime.min.js"></script>
    <script src="/js/landing.js"></script>
  </body>
</html>
